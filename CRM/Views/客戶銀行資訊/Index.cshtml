@model CRM.Models.ViewModel.客戶銀行資訊VM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Index", "客戶銀行資訊", FormMethod.Post, new { id = "Form" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">篩選查詢</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.銀行名稱)</label>
                                @Html.TextBoxFor(m => m.銀行名稱, new { @class = "form-control" })
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.銀行代碼)</label>
                                @Html.TextBoxFor(m => m.銀行代碼, new { @class = "form-control" })
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.分行代碼)</label>
                                @Html.TextBoxFor(m => m.分行代碼, new { @class = "form-control" })
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.帳戶名稱)</label>
                                @Html.TextBoxFor(m => m.帳戶名稱, new { @class = "form-control" })
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.帳戶號碼)</label>
                                @Html.TextBoxFor(m => m.帳戶號碼, new { @class = "form-control" })
                                <p class="help-block"></p>
                            </div>
                        </div>

                        <div class="col-lg-1">
                            <div style="margin-top:25px">
                                <input type="submit" value="查詢" class="btn btn-info" />
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div style="margin-top:25px">
                                <input type="button" value="匯出" class="btn btn-success" id="Export" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().銀行名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().銀行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().分行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().帳戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().帳戶號碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行資訊s.FirstOrDefault().客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.客戶銀行資訊s) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<script type="text/javascript">

    $("#Export").click(function () {
        $("#Form").attr('action', '@Url.Action("Export", "客戶銀行資訊")');
        $("#Form").submit();
    });

</script>
